<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:clickable="true"
    android:orientation="vertical">


    <include
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@drawable/hi_icon" />


            <com.rider.customclasses.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/question_icon"
                android:text="have a question"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_30"
                app:fontName="@string/font_bold" />


            <com.rider.customclasses.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/dp_30"
                android:paddingTop="@dimen/dp_15"
                android:text="what\'s your name?"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_18"
                app:fontName="@string/font_regular" />


            <com.rider.customclasses.CustomEditText
                android:id="@+id/edtFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:textColorHint="@color/new_text_color"
                android:hint="full name"
                android:textColor="@color/new_text_color"
                android:textSize="@dimen/dp_20"
                app:fontName="@string/font_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@android:color/darker_gray" />


            <com.rider.customclasses.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/dp_30"
                android:paddingTop="@dimen/dp_15"
                android:text="email address?"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_18"
                app:fontName="@string/font_regular" />


            <com.rider.customclasses.CustomEditText
                android:id="@+id/edtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:hint="email"
                android:textColorHint="@color/new_text_color"
                android:textColor="@color/new_text_color"
                android:textSize="@dimen/dp_20"
                app:fontName="@string/font_regular" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@android:color/darker_gray" />


            <com.rider.customclasses.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_15"
                android:text="how can we help?"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_18"
                app:fontName="@string/font_regular" />


            <com.rider.customclasses.CustomEditText
                android:id="@+id/edtMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="message"
                android:textColorHint="@color/new_text_color"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:textColor="@color/new_text_color"
                android:textSize="@dimen/sp_20"
                app:fontName="@string/font_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@android:color/darker_gray" />

            <com.rider.customclasses.CustomTextView
                android:id="@+id/tvSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@drawable/rounded_corner_buttons_yellow"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:text="Send"
                android:textAllCaps="true"
                android:textColor="@color/White"
                android:textSize="@dimen/sp_15"
                app:fontName="@string/font_bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>